<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:background="@color/colorBackgroundGray"
    >

    <TextView
        android:text="Please enter your city in this format: NewYork,NY,US"
        android:id="@+id/city_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/city_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_label"
        />

    <Button
        android:text="Get Weather"
        android:id="@+id/weather_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_edittext"
        android:background="@drawable/button_gray"
        android:layout_marginTop="8dp"
        android:onClick="onWeatherClick"
        />

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/weather_button"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:text="Forecast: Sharknado"
        android:id="@+id/weather_textview"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_icon"
        />

    <TextView
        android:text="Temperature: 120F"
        android:id="@+id/curr_temp_textview"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_textview"
        />

    <TextView
        android:text="H 100 L 80"
        android:id="@+id/temp_range_textview"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/curr_temp_textview"
        />

</RelativeLayout>
